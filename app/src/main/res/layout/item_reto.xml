<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:background="@drawable/item_reto_background"> <!-- Cambiado a drawable -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trofeoIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/trofeo_icon"
            android:contentDescription="Trofeo Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reto de Hidratación Diaria"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/descripcionReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bebe al menos 2 litros de agua al día para mejorar tu salud y bienestar."
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@android:color/darker_gray" />

            <!-- Nueva TextView para la disponibilidad -->
            <TextView
                android:id="@+id/fechaDisponibilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible desde: Día 1, Semana 1 hasta: Día 7, Semana 2"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/unirseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Unirse"
        android:backgroundTint="@color/cyan_book"
        android:textColor="@android:color/white" />
</LinearLayout>
